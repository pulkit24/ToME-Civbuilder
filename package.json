{
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "build:nuxt": "cd src/frontend && npm install && npm run build",
    "dev:nuxt": "cd src/frontend && npm run dev",
    "start": "node server.js"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/helpers/"
    ]
  },
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "canvas": "^2.11.2",
    "cookie-parser": "^1.4.6",
    "express": "^4.17.1",
    "express-easy-zip": "^1.1.5",
    "pug": "^3.0.2",
    "socket.io": "^4.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  }
}
